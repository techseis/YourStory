@model IList<ArticleOverviewModel>
@using YStory.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="article-grid cross-sells">
        <div class="title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid">
            @foreach (var article in Model)
            {
                <div class="item-box">
                    @Html.Partial("_ArticleBox", article)
                </div>
            }
        </div>
    </div>
}