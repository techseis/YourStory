@model IList<ArticleOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.NewArticles").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-added-articles-page");
}
@using YStory.Web.Models.Catalog;
<div class="page recently-added-articles-page">
    <div class="page-title">
        <a href="@Url.RouteUrl("NewArticlesRSS")" class="link-rss" title="@T("Articles.NewArticles.RSS.Hint")">@T("Articles.NewArticles.RSS")</a>
        <h1>@T("Articles.NewArticles")</h1>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="article-grid">
                <div class="item-grid">
                    @foreach (var article in Model)
                    {
                        <div class="item-box">
                            @Html.Partial("_ArticleBox", article)
                        </div>
                    }
                </div>
            </div>        
        }
    </div>
</div>
