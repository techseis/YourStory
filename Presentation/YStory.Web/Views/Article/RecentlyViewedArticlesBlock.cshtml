@model IList<ArticleOverviewModel>
@using YStory.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="block block-recently-viewed-articles">
        <div class="title">
            <strong>@T("Articles.RecentlyViewedArticles")</strong>
        </div>
        <div class="listbox">
            <ul class="list">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var article = Model[i];
                    <li @(i == Model.Count - 1 ? @Html.Raw(" class=\"last\"") : null)>
                        @if (!String.IsNullOrEmpty(article.DefaultPictureModel.ImageUrl))
                        {
                            <a class="article-picture" href="@Url.RouteUrl("Article", new { SeName = article.SeName })" title="@article.DefaultPictureModel.Title">
                                <img alt="@article.DefaultPictureModel.AlternateText" src="@article.DefaultPictureModel.ImageUrl" title="@article.DefaultPictureModel.Title" />
                            </a>
                        }
                        <a class="article-name" href="@Url.RouteUrl("Article", new { SeName = article.SeName })">@article.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}