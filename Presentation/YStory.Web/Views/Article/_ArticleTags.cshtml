@model IList<ArticleTagModel>
@using YStory.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="article-tags-box">
        <div class="title">
            <strong>@T("Articles.Tags")</strong>
        </div>
        <div class="article-tags-list">
            <ul>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li class="tag">
                        <a href="@Url.RouteUrl("ArticlesByTag", new { articleTagId = Model[i].Id, SeName = Model[i].SeName })" class="articletag">
                            @Model[i].Name</a> <span>@T("Articles.Tags.Count", Model[i].ArticleCount)</span></li>
                    if (i != Model.Count - 1)
                    {
                    <li class="separator">,</li>
                    }
                }
            </ul>
        </div>
    </div>

}